@model Message

@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .card-custom {
        border-radius: 10px;
        border: none;
        box-shadow: 0px 3px 10px rgba(0,0,0,0.08);
    }

    .card-header-custom {
        background: #3f51b5;
        color: white;
        padding: 18px 20px;
        border-radius: 10px 10px 0 0;
        font-size: 18px;
        font-weight: 600;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 6px;
        font-size: 15px;
        padding: 10px 12px;
        border: 1px solid #d5d5d5;
        transition: all 0.2s ease-in-out;
    }

        .form-control:focus {
            border-color: #3f51b5;
            box-shadow: 0 0 4px rgba(63, 81, 181, 0.4);
        }

    .btn-update {
        background: linear-gradient(45deg, #4caf50, #43a047);
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 30px;
        font-weight: 600;
        color: white;
        transition: 0.25s;
    }

        .btn-update:hover {
            opacity: 0.85;
            transform: translateY(-2px);
        }
</style>


<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2 style="font-weight:600;">
                    <i class="zmdi zmdi-edit"></i> Mesaj Güncelleme
                    <small class="text-muted" style="font-size:14px;">Mesaj İşlemleri</small>
                </h2>
            </div>

            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="/Message/MessageList"><i class="zmdi zmdi-home"></i> Mesajlar</a></li>
                    <li class="breadcrumb-item"><a>Mesaj Listesi</a></li>
                    <li class="breadcrumb-item active">Mesaj Güncelle</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">

                <div class="card card-custom">
                    <div class="card-header-custom">
                        <i class="zmdi zmdi-edit"></i> Mesaj Bilgilerini Güncelle
                    </div>

                    <div class="body p-4">

                        <form method="post">

                            <input type="hidden" asp-for="MessageId" />

                            <div class="form-group">
                                <label class="form-label">Müşteri Id</label>
                                <input type="text" asp-for="CustomerId" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label class="form-label">Konu</label>
                                <input type="text" asp-for="MessageSubject" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label class="form-label">Mesaj İçeriği</label>
                                <textarea rows="5" class="form-control" asp-for="MessageText"></textarea>
                            </div>

                            <div class="text-right mt-3">
                                <button class="btn btn-update">
                                    <i class="zmdi zmdi-check"></i> Mesajı Güncelle
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
