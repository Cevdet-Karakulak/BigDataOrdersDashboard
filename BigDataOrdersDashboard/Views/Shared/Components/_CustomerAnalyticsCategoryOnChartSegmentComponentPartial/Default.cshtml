<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="category-card">
    <div class="category-header">
        <div>
            <h2>Müşteri Sipariş Kategorileri</h2>
            <small>Bugünkü Sipariş Sayıları</small>
        </div>
        <i class="fa-solid fa-chart-line header-icon"></i>
    </div>

    <div class="category-body">
        <div class="row text-center stat-row">
            <div class="col-sm-4 col-4">
                <span class="stat-title">@ViewBag.TopCategory1Name</span>
                <h4 class="stat-value">@ViewBag.TopCategory1Count Adet</h4>
            </div>
            <div class="col-sm-4 col-4">
                <span class="stat-title">@ViewBag.TopCategory2Name</span>
                <h4 class="stat-value">@ViewBag.TopCategory2Count Adet</h4>
            </div>
            <div class="col-sm-4 col-4">
                <span class="stat-title">@ViewBag.TopCategory3Name</span>
                <h4 class="stat-value">@ViewBag.TopCategory3Count Adet</h4>
            </div>
        </div>

        <div id="categoryChart" class="chart-box"></div>
    </div>
</div>
<style>
    .category-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 25px;
        box-shadow: 0 8px 22px rgba(0,0,0,0.12);
        margin-top: 25px;
        transition: 0.25s ease;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .category-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.18);
        }

    .category-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 12px;
        border-bottom: 1px solid rgba(0,0,0,0.08);
    }

        .category-header h2 {
            font-size: 22px;
            font-weight: 700;
            margin: 0;
            color: #333;
        }

        .category-header small {
            font-size: 14px;
            opacity: 0.7;
        }

    .header-icon {
        font-size: 34px;
        color: #6366f1;
        background: rgba(99,102,241,0.15);
        padding: 12px;
        border-radius: 12px;
    }

    .category-body {
        margin-top: 20px;
    }

    .stat-row .stat-title {
        font-size: 14px;
        opacity: .7;
    }

    .stat-row .stat-value {
        font-size: 22px;
        font-weight: 700;
        margin-top: 5px;
    }

    .chart-box {
        margin-top: 25px;
    }

</style>

<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<script>
    var options = {
        chart: {
            type: 'line',
            height: 350,
            toolbar: { show: false },
            zoom: { enabled: false }
        },
        stroke: {
            width: 3,
            curve: 'smooth'
        },
        colors: ["#6366f1", "#22c55e", "#ec4899", "#f59e0b", "#3b82f6"],
        series: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Series)),
        xaxis: {
            categories: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Years)),
            labels: { style: { fontSize: '13px' } }
        },
        grid: {
            borderColor: 'rgba(0,0,0,0.08)'
        },
        markers: {
            size: 4,
            strokeWidth: 0
        },
        tooltip: {
            shared: true,
            intersect: false,
            theme: "light"
        },
    };

    var chart = new ApexCharts(document.querySelector("#categoryChart"), options);
    chart.render();
</script>
