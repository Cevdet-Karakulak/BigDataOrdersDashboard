<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="analytics-row">

    <!-- KART 1 -->
    <div class="analytic-card">
        <div class="icon purple">
            <i class="fa-solid fa-user"></i>
        </div>
        <div>
            <h4>@ViewBag.TopCustomer</h4>
            <span>En Aktif Müşteri</span>
        </div>
    </div>

    <!-- KART 2 -->
    <div class="analytic-card">
        <div class="icon blue">
            <i class="fa-solid fa-city"></i>
        </div>
        <div>
            <h4>@ViewBag.TopCity</h4>
            <span>En Aktif Şehir</span>
        </div>
    </div>

    <!-- KART 3 – İKON EKLENDİ -->
    <div class="analytic-card">
        <div class="icon teal">
            <i class="fa-solid fa-calendar-check"></i>
        </div>
        <div>
            <h4>@ViewBag.Last30DaysOrderCount</h4>
            <span>Son 30 Günde Sipariş Veren Müşteri</span>
        </div>
    </div>

    <!-- KART 4 -->
    <div class="analytic-card">
        <div class="icon green">
            <i class="fa-solid fa-credit-card"></i>
        </div>
        <div>
            <h4>@ViewBag.TopPaymentMethod</h4>
            <span>En Popüler Ödeme Yöntemi</span>
        </div>
    </div>

</div>

<style>
    .analytics-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 25px;
        margin-top: 20px;
    }

    .analytic-card {
        background: white;
        padding: 20px 25px;
        border-radius: 14px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        display: flex;
        align-items: center;
        gap: 18px;
        transition: all .2s;
    }

        .analytic-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .analytic-card h4 {
            margin: 0;
            font-weight: 700;
            font-size: 22px;
        }

        .analytic-card span {
            font-size: 14px;
            opacity: .8;
        }

    .icon {
        width: 55px;
        height: 55px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 26px;
        color: white;
    }

    .purple {
        background: linear-gradient(135deg,#d16ba5,#c777b9);
    }

    .blue {
        background: linear-gradient(135deg,#4facfe,#00f2fe);
    }

    .teal {
        background: linear-gradient(135deg,#43e97b,#38f9d7);
    }

    .green {
        background: linear-gradient(135deg,#6ee7b7,#3b82f6);
    }

</style>
