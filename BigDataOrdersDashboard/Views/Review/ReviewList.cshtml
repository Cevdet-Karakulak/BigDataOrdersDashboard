@model List<Review>

@{
    ViewData["Title"] = "ReviewList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Yorum ve Değerlendirme Listesi
                    <small class="text-muted">Kullanıcı Yorum Listesi İşlemleri Sayfası</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Değerlendirmeler</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Kullanıcı Listesi</a></li>
                    <li class="breadcrumb-item active">Ana Sayfa</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">

                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Müşteri</th>
                                    <th>Ürün</th>
                                    <th>Değerlendirme</th>
                                    <th>Yorum Analizi</th>
                                    <th>Yorumu Gör</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.ReviewId</th>
                                        <td>@item.Customer.CustomerName @item.Customer.CustomerSurname</td>
                                        <td>@item.Product.ProductName</td>
                                        <td>@item.Rating</td>
                                        <td>@item.Sentiment</td>
                                        <td>
                                            <button class="btn btn-warning btn-sm openReviewBtn" data-id="@item.ReviewId">
                                                <i class="zmdi zmdi-eye"></i> Yorumu Gör
                                            </button>
                                        </td>
                                        <td>
                                            <a href="/Review/DeleteReview/@item.ReviewId" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Review/UpdateReview/@item.ReviewId" class="btn btn-success btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="mt-3 text-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">

                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="/Review/ReviewList?page=@(ViewBag.CurrentPage - 1)">Önceki</a>
                                        </li>
                                    }

                                    @{
                                        int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                        int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                                        if (startPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/Review/ReviewList?page=1">1</a>
                                            </li>
                                            if (startPage > 2)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                        }

                                        for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="/Review/ReviewList?page=@i">@i</a>
                                            </li>
                                        }

                                        if (endPage < ViewBag.TotalPages)
                                        {
                                            if (endPage < ViewBag.TotalPages - 1)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link" href="/Review/ReviewList?page=@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                                            </li>
                                        }
                                    }

                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="/Review/ReviewList?page=@(ViewBag.CurrentPage + 1)">Sonraki</a>
                                        </li>
                                    }

                                </ul>
                            </nav>
                        </div>


                        <div class="text-center mt-4">
                            <a href="/Review/CreateReview/" class="btn btn-primary">Yeni Değerlendirme Girişi</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- REVIEW DETAY MODAL -->
<div class="modal fade" id="reviewModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header" style="background:#3f51b5; color:white;">
                <h5 class="modal-title">
                    <i class="zmdi zmdi-comment-text"></i> Yorum Detayı
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body" style="font-size:16px;">
                <h5 id="revCustomer" class="font-weight-bold mb-2"></h5>

                <p class="text-muted">
                    <i class="zmdi zmdi-label"></i> <span id="revProduct"></span> &nbsp; | &nbsp;
                    <i class="zmdi zmdi-star"></i> <span id="revRating"></span> &nbsp; | &nbsp;
                    <i class="zmdi zmdi-info-outline"></i> <span id="revSentiment"></span>
                </p>

                <hr />

                <p id="revComment"></p>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary btn-rounded" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).on("click", ".openReviewBtn", function () {
        var id = $(this).data("id");

        $.ajax({
            url: "/Review/GetReviewDetail",
            data: { id: id },
            success: function (res) {
                if (!res.success) return;

                $("#revCustomer").text(res.customer);
                $("#revProduct").text(res.product);
                $("#revRating").text(res.rating);
                $("#revSentiment").text(res.sentiment);
                $("#revComment").text(res.comment);

                $("#reviewModal").modal("show");
            }
        });
    });
</script>
